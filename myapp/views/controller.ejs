<body>

  <div id="title">
    <h3>Zoom Controller</h3>
  </div>
  
  
  <% if ( isAudio == true) { %>
    <div>
      <a class="btn btn-danger" href="/audiobutton" role="button">mute audio</a>
    </div>
    
  <% } else { %>
    <div>
      <a class="btn btn-success" href="/audiobutton" role="button">unmute audio</a>
    </div>
    
  <% } %>
  <% if (isVideo == true) { %>
    <div>
      <a class="btn btn-danger" href="/videobutton" role="button">mute video</a>
    </div>
    
  <% } else { %>
    <div>
      <a class="btn btn-success" href="/videobutton" role="button">unmute video</a>      
    </div>

    <% } %>
  <% if ( isView == true) { %>
    <div>
      <a class="btn btn-primary" href="/viewbutton" role="button">gallery view</a>
    </div>

  <% } else { %>
    <div>
      <a class="btn btn-primary" href="/viewbutton" role="button">speaker view</a>
    </div>

 <% } %>
 <div>
